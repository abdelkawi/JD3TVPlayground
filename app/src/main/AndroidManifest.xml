<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.genwin.jd3tv">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.genwin.jd3tv.AppClass"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JD3TVPlayground"
        tools:targetApi="31">

        <activity
            android:name="com.genwin.jd3tv.screens.splash.presentation.SplashActivity"
            android:exported="true"
            tools:node="merge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.home.presentation.MainActivity"
            android:exported="true"
            tools:node="merge">

        </activity>

        <activity
            android:name=".screens.welcome.presentation.WelcomeActivity"
            android:exported="true"
            tools:node="merge">

        </activity>

        <activity
            android:name=".screens.login.presentation.LoginActivity"
            android:exported="true"
            tools:node="merge">

        </activity>


    </application>

</manifest>